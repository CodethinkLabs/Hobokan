<index-page >
  <content: replace>
    <h4>Workload</h4>
    <collection with="&User.active">
       <name/>:
       <repeat:project_members.active>
         <if test="&this.items.todo">
           <this.project.name/>:
           <repeat:items.todo><if test="&this.milestone"><span style="background-color:#{this.milestone.background_color}">S<this.id/></span></if></repeat:items.todo>
         </if>
       </repeat:project_members.active>
    </collection>
  </content:>
</index-page>