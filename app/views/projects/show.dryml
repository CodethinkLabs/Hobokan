      <div id="output"></div>
      <div class="clear"></div>

      <javascript name="jquery.dragsort"/>
      <javascript name="kanban_board"/>
    </div>
    <aside style="width: 20%;">
        <h3>Change Log</h3>

    </aside>
   </section-group>
  </content>
</show-page>