<show-page for="Project">
  <content: replace>

   <section-group>
    <div class="section content-body">
      <h3><name/> 
   </h3>
	<a action="edit" if="&can_edit?" style="float: right;">
      <ht key="project.actions.edit" name="&this.respond_to?(:name) ? this.name : ''">
        Edit Project
      </ht>
    </a>
    <form with="&@item || new_for_current_user(@project.lanes[0].items)" without-cancel>
      <field-list: fields="title" style="width: 50%;"/>
      <submit: label="#{ht 'Item.actions.add', :default=>['Add'] }" style=""/>
    </form>

      <view:states.html_safe id="states" style="visibility: hidden;" />
      <view:stories.html_safe id="stories" style="visibility: hidden;" />
      <textarea id="data_output" rows="20" cols="100"></textarea>
      <style type="text/css">
