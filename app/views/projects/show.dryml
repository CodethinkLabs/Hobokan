<show-page>
<content:>
  <a action="kanban">
    &laquo; Back to <name/> kanban
  </a>
  <section-group>
    <section>
      <if test="&current_user.is_a?(User)">
        <a action="edit" style="float:right;">Edit Project</a>
      </if>
      <field-list skip="items, project_members">
        <details-view:><if><this.to-html.html-safe/></if></details-view:>
        <milestones-view:><table-plus fields="name, description, date"/></milestones-view:>
      </field-list>
    </section>
    <aside style="width:50%;">
      <change-log-view/>
    </aside>
  </section-group>
</content:>
</show-page>
